// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SteamUser {
  id             Int      @id @default(autoincrement())
  name           String
  steamId        String
  avatar         String
  profileurl     String
  loccountrycode String
  Games       UserGames[]
}

model Game {
  id            Int         @id @default(autoincrement())
  name          String
  steamId       String
  headerImage   String
  steamRating   String
  steamShopUrl  String
  Games   UserGames[]
}


model UserGames {
  userId  Int
  gameId       Int
  user    SteamUser @relation(fields: [userId], references: [id])
  game         Game      @relation(fields: [gameId], references: [id])
  @@id([userId, gameId])
}
