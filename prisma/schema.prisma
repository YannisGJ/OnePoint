// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SteamUser {
  id             Int      @id @default(autoincrement())
  name           String
  userid        String
  avatar         String
  profileurl     String
  loccountrycode String
  Games       UserGames[]
}

model Game {
  id            Int         @id @default(autoincrement())
  appid       String
  name          String
  type          String
  headerImage   String
  steamShopUrl  String
  Games   UserGames[]
}


model UserGames {
  userid  Int
  appid       Int
  user    SteamUser @relation(fields: [userid], references: [id])
  game         Game      @relation(fields: [appid], references: [id])
  @@id([userid, appid])
}
